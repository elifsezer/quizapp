<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        tools:context=".QuizActivity">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="30sp"
              android:textColor="@android:color/black"
              android:layout_above="@id/radio_group"
              android:textAlignment="center"
              android:id="@+id/tv_soru"
              android:padding="10dp"
              android:layout_centerVertical="true"
              android:text="Soru" android:layout_marginTop="10dp" android:layout_marginStart="10dp"
              android:layout_marginEnd="10dp" android:layout_marginBottom="10dp" android:onClick="true"/>

    <RadioGroup android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/radio_group">

        <RadioButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:id="@+id/radio_button1"
                     android:textSize="20sp"
                     android:onClick="radiobutton_1"/>

        <RadioButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:id="@+id/radio_button2"
                     android:textSize="20sp"
                     android:onClick="radiobutton_2"/>

        <RadioButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:id="@+id/radio_button3"
                     android:textSize="20sp"
                     android:onClick="radiobutton_3"/>
    </RadioGroup>

    <Button
            android:id="@+id/btn_next_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Next question"
            android:layout_below="@id/radio_group"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp" android:layout_toStartOf="@+id/btn_last_question"
            android:layout_marginEnd="24dp"/>

    <Button
            android:id="@+id/btn_last_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last question"
            android:layout_below="@id/radio_group"
            android:layout_marginTop="21dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="36dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp"
            android:id="@+id/tv_sure"
            android:textSize="20sp"
            android:layout_marginTop="8dp"/>
</RelativeLayout>